top_srcdir = @top_srcdir@
srcdir = @srcdir@
top_builddir = ../../..

VPATH = @srcdir@:@top_srcdir@/lib/powerpc:@top_srcdir@/lib

USE_OPENFIRMWARE=@USE_OPENFIRMWARE@
BOOT_ENVIRONMENT=@BOOT_ENVIRONMENT@

include $(top_srcdir)/lib/Makefile.common
include $(top_srcdir)/lib/powerpc/Makefile.common

include $(top_builddir)/Makefile.conf

ifeq (@HOST_ALT_TOOLS@, ppc32)
CUR_TOOL=HOST_ALT
CPU_GRP=32
else
CUR_TOOL=HOST
endif

ALL_TARGETS+= libhype.a

all: $(ALL_TARGETS)

libhype.a: $(OBJECTS) $(DEPENDENCIES)
	$(RM) $@		# why?
	$($(CUR_TOOL)_AR) -cru $@ $(OBJECTS)
	$($(CUR_TOOL)_RANLIB) $@
